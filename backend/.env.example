# Signal Backend Configuration
# Copy this file to ../.env and fill in your values

# Database (matches docker-compose.yml defaults)
DATABASE_URL=postgresql://signal:signal@localhost:5432/signal

# OpenAI — used for LLM summarization and weekly review generation
# Get a key at https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-nano

# YouTube Data API v3 — used for channel fetching and keyword search
# Get a key at https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=

# GitHub token (optional) — increases rate limit from 60/hr to 5000/hr
# Create at https://github.com/settings/tokens
GITHUB_TOKEN=

# Pipeline schedule (cron expression)
PIPELINE_CRON=0 6,18 * * *

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# Server
HOST=0.0.0.0
PORT=8000
